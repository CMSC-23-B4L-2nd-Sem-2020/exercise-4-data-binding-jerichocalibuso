<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/fields_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center"
                    android:text="@string/title_text"
                    android:textColor="@color/colorAccent"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/subtitle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24sp"
                    android:fontFamily="@font/ageo_medium"
                    android:gravity="center"
                    android:text="@string/subtitle_text"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/name_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nickname_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/nickname_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nickname_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/age_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/age_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/age_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/birthday_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/birthday_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/birthday_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/degree_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/degree_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/degree_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/number_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/number_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_edit"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/color_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/color_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/color_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dream_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/dream_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dream_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/crush_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/crush_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/crush_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/message_edit_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/field_side_margin"
                    android:layout_marginRight="@dimen/field_side_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:clickable="false"
                    android:hint="@string/message_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/message_edit"
                        android:inputType="textMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/submit_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:text="Submit"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/summary_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/field_bottom_margin"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="Summary"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/name_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nickname_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/nickname_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nickname_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/age_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/age_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/birthday_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/birthday_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/birthday_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/degree_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/degree_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/degree_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/number_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/number_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/color_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/color_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/color_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dream_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/dream_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dream_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/crush_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/crush_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/crush_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/message_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/message_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/message_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/exit_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/field_bottom_margin"
                    android:fontFamily="@font/ageo_bold"
                    android:text="Exit"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</layout>